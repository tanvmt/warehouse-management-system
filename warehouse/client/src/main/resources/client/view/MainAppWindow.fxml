<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="/client/style/main.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.MainAppWindowController">
    
    <top>
        <HBox alignment="CENTER_RIGHT" styleClass="header-bar">
            <children>
                <Label text="Xin chào, " styleClass="user-info-label">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="usernameLabel" text="[Tên User]" styleClass="user-info-label">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text=" (" styleClass="user-info-label" />
                <Label fx:id="roleLabel" text="[Manager]" styleClass="user-role-label" />
                <Label text=")" styleClass="user-info-label" />
            </children>
        </HBox>
    </top>
    
    <left>
        <fx:include source="Navigation.fxml" />
    </left>
    
    <center>
        <StackPane fx:id="contentArea" styleClass="root-pane">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </StackPane>
    </center>
    
</BorderPane>