<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox styleClass="root-pane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.HistoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Lịch sử Giao dịch" />
        
        <VBox styleClass="card" VBox.vgrow="ALWAYS" spacing="10.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label styleClass="card-title" text="Toàn bộ giao dịch (Live)" HBox.hgrow="ALWAYS" />
                <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="primary-button" text="Làm mới">
                   <graphic>
                      <FontIcon iconLiteral="fas-sync-alt" />
                   </graphic>
                </Button>
            </HBox>
            
            <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="timestampCol" prefWidth="180.0" text="Thời gian" />
                    <TableColumn fx:id="clientNameCol" prefWidth="120.0" text="Nhân viên" />
                    <TableColumn fx:id="actionCol" prefWidth="100.0" text="Hành động" />
                    <TableColumn fx:id="productCol" prefWidth="200.0" text="Sản phẩm" />
                    <TableColumn fx:id="quantityCol" prefWidth="100.0" text="Số lượng" />
                    <TableColumn fx:id="resultCol" prefWidth="250.0" text="Kết quả" />
                </columns>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </children>
</VBox>