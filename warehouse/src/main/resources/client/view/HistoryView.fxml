<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox styleClass="root-pane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.TransactionHistoryController" spacing="15.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Lịch sử Giao dịch" />
        
        <HBox spacing="10.0" alignment="BOTTOM_LEFT" styleClass="card">
            <VBox>
                <Label styleClass="field-label" text="Từ ngày" />
                <DatePicker fx:id="startDatePicker" />
            </VBox>
            <VBox>
                <Label styleClass="field-label" text="Đến ngày" />
                <DatePicker fx:id="endDatePicker" />
            </VBox>
            
            <Button fx:id="filterButton" onAction="#handleFilterButton" styleClass="primary-button" text="Lọc / Làm mới" HBox.hgrow="ALWAYS">
                <graphic>
                    <FontIcon iconLiteral="fas-filter" />
                </graphic>
            </Button>
        </HBox>
        
        <VBox styleClass="card" spacing="10.0" VBox.vgrow="ALWAYS">
            <Label fx:id="historyTableTitle" styleClass="card-title" text="Tất cả Giao dịch" />
            <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="timestampCol" prefWidth="180.0" text="Thời gian" />
                    <TableColumn fx:id="clientNameCol" prefWidth="120.0" text="Nhân viên" />
                    <TableColumn fx:id="actionCol" prefWidth="100.0" text="Hành động" />
                    <TableColumn fx:id="productCol" prefWidth="200.0" text="Sản phẩm" />
                    <TableColumn fx:id="quantityCol" prefWidth="100.0" text="Số lượng" />
                    <TableColumn fx:id="resultCol" prefWidth="250.0" text="Kết quả" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox spacing="10.0" alignment="CENTER_RIGHT" styleClass="pagination-box">
                <Button fx:id="prevButton" onAction="#handlePrevPage" styleClass="pagination-button">
                    <graphic>
                        <FontIcon iconLiteral="fas-chevron-left" />
                    </graphic>
                </Button>
                
                <Label fx:id="paginationLabel" text="Trang 1 / 1" styleClass="pagination-label" />
                
                <Button fx:id="nextButton" onAction="#handleNextPage" styleClass="pagination-button">
                     <graphic>
                        <FontIcon iconLiteral="fas-chevron-right" />
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </children>
</VBox>