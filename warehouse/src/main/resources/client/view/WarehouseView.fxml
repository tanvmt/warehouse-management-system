<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox styleClass="root-pane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.WarehouseController">
    <children>
        <Label styleClass="title-label" text="Quản lý Kho hàng" />
      
        <SplitPane dividerPositions="0.35" VBox.vgrow="ALWAYS">
            <items>
                <VBox styleClass="card" spacing="15.0">
                    <Label styleClass="card-title" text="Thực hiện Giao dịch" />
                    
                    <Label styleClass="field-label" text="Chọn Sản phẩm:" />
                    <ComboBox fx:id="productComboBox" maxWidth="Infinity" styleClass="combo-box" />
                    
                    <Label styleClass="field-label" text="Nhập Số lượng:" />
                    <TextField fx:id="quantityField" styleClass="text-field" promptText="ví dụ: 10" />
                    
                    <HBox spacing="10.0">
                        <Button onAction="#handleImportButton" styleClass="primary-button" text="Nhập hàng" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                           <graphic>
                              <FontIcon iconLiteral="fas-plus-circle" />
                           </graphic>
                        </Button>
                        <Button onAction="#handleExportButton" styleClass="secondary-button" text="Xuất hàng" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                           <graphic>
                              <FontIcon iconLiteral="fas-minus-circle" />
                           </graphic>
                        </Button>
                    </HBox>
                    
                    <Label fx:id="statusLabel" managed="false" /> 
                    
                    <Label styleClass="field-label" text="Log Giao dịch (cá nhân):" />
                    <TextArea fx:id="logTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                </VBox>
               
                <VBox styleClass="card" spacing="10.0">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="card-title" text="Tình trạng Tồn kho (Live)" HBox.hgrow="ALWAYS" />
                        <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="primary-button" text="Làm mới">
                           <graphic>
                              <FontIcon iconLiteral="fas-sync-alt" />
                           </graphic>
                        </Button>
                    </HBox>
          
                    <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="productNameCol" prefWidth="300.0" text="Tên Sản phẩm" />
                            <TableColumn fx:id="quantityCol" prefWidth="150.0" text="Số lượng Tồn" />
                        </columns>
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>